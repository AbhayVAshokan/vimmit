{
  "manifest_version": 3,
  "name": "Vimmit",
  "version": "1.0.0",
  "description": "Vim-like keyboard navigation for Reddit. Browse posts and comments with 'j' and 'k', upvote/downvote with 'u'/'d', and more.",
  "homepage_url": "https://gitlab.com/abhayvashokan/vimmit",
  "host_permissions": [
    "*://www.reddit.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.reddit.com/*"
      ],
      "js": [
        "dist/index.js"
      ],
      "css": [
        "src/content/styles.css"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "abhayvashokan@gmail.com",
      "data_collection_permissions": {
        "required": [
          "websiteContent",
          "websiteActivity"
        ],
        "optional": []
      }
    }
  },
  "icons": {
    "48": "assets/logo-48.png",
    "96": "assets/logo-96.png"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "Vimmit Keybindings"
  }
}
